<!-- views/signin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>

    <style>
        /* Add CSS styles for the container */
        body {
            margin: 0;
            padding: 0;
             /* Set background color for the body (black in this example) */
            overflow: hidden; /* Hide overflow for video */
            font-family: Arial, sans-serif; 
        }

        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(244, 241, 241, 0.7); /* Add a semi-transparent background to the form */
            padding: 20px;
            border-radius: 10px;
            max-width: 400px; /* Set a maximum width for the container */
            width: 100%; /* Ensure the container takes the full width within its max-width */
            text-align: center;
        }
        /* Add more CSS styles for form elements, buttons, etc. as needed */

  

        
h1 {
    color: #333; /* Set text color for the heading */
}

.error-message {
    color: red; /* Set text color for error messages */
    font-weight: bold; /* Make error messages bold */
}

form {
    margin-top: 20px; /* Add space between the heading and the form */
}

label {
    display: block; /* Display labels on separate lines */
    margin-top: 10px; /* Add space between form elements */
    font-weight: bold; /* Make labels bold */
}

input[type="email"],
input[type="password"] {
    width: 80%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

button[type="submit"] {
    background-color: #007bff; /* Set a blue background color for the button */
    color: #fff; /* Set text color for the button */
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    margin-top: 10px; /* Add space between form elements */
}

button[type="submit"]:hover {
    background-color: #0056b3; /* Change the background color on hover */
}

a {
    color: #007bff; /* Set link color */
    text-decoration: none; /* Remove underlines from links */
}

a:hover {
    text-decoration: underline; /* Add underlines on hover */
}
    </style>
</head>
<body>
    

    <div class="container">
        <h1>Sign In</h1>
        
        <!-- Error Message (if authentication fails) -->
        <% if (errorMessage) { %>
            <p class="error-message"><%= errorMessage %></p>
        <% } %>

        <form action="/signin" method="POST">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Sign In</button>
        </form>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
